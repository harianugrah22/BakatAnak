<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.bakatanak.Hasil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Nama "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anak"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Potensi "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Potensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Potensi"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Hasil Lengkap :"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Hasil_Pengusaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengusaha"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/Hasil_Seniman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seniman"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/Hasil_Pengajar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengajar"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/Hasil_Dokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dokter"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/Hasil_Polisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polisi"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical|right"
                android:textSize="18dp" />
        </LinearLayout>>
    </ScrollView>

    <Button
        android:id="@+id/Baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Tes Baru" />

</LinearLayout>
